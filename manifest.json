{
  "manifest_version": 2,
  "name": "Character counter of selected text",
  "description": "This extension counts the number of characters of selected text.",
  "version": "1.0.5",
  "options_page": "options.html",
  "permissions": ["storage", "contextMenus"],
  "browser_action": {
    "default_icon": "icon.png"
  },  
  "icons": {
    "128": "icon128.png",
    "64": "icon64.png",
    "32": "icon32.png",
    "16": "icon16.png"
  },  
  "content_scripts": [ {
    "js": [ "counter.js" ],
    "matches": [ "*://*/*" ]
  } ],
  "background": {
    "persistent": false,
    "scripts": [ "background.js" ]
  }
}
